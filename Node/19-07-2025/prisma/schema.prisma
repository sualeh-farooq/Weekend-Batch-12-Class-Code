generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id   Int   @id @default(autoincrement())
  name String? 
  email String  @unique
  role  Role  @default(USER)
  posts  Posts[]
}

model Posts {
  id Int @id @default(autoincrement())
  title String 
  description String
  authorId Int
  author User @relation(fields: [authorId] , references: [id])
}


enum Role {
  ADMIN
  USER
}